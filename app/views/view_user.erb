<h1>Hello, <%= @user.name %></h1>
<div>




  <ul>
    <li>Name: <%= @user.name %></li>
    <li>E-Mail: <%= @user.email %></li>

  </ul>
  <form action="/user/logout" method="get">
    <input type="submit" value="Log Out">
  </form></br>
  <form action="/decks" method="get">
    <input type="submit" value="Play Game">
  </form>


  <% @user.rounds.each do |round| %>
    <div class="container">
    Topic: <%= round.deck.topic %><br>
    Correct Guesses: <%= round.num_correct %><br>
    Incorrect Guesses: <%= round.num_incorrect %><br>
    Total Guesses: <%= round.num_correct + round.num_incorrect %><br>
    </div> 
  <% end %>



</div>
